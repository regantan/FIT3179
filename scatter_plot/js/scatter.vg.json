{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Bubble Plot of Population over CO2 emissions over Different Countries in Year 2020",
  "data": {"url": "https://raw.githubusercontent.com/regantan/FIT3179/main/scatter_plot/data/co2_emissions_2010_2020.csv"},
  "width": 800,
  "height": 500,
  "params": [
      {
          "name": "Continent_selection",
          "bind": {
              "input": "select",
              "options": [
              null,
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
              ],
              "labels":[
              "Show All",
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
              ],
              "name": "Continent Selection: "
          }
      },
      {
          "name": "Area_Above",
          "value": 0,
          "bind": {
          "input": "range",
          "min": 0,
          "max": 10000000,
          "step": 100,
          "name": "Minimum Area: "
          }
      }
          
  ],  
  "transform": [
      {"filter": "datum.co2_emissions > 0"},
      {"filter": "datum.Year == 2020"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},        
      {"filter": "datum.Area > Area_Above"},
      {
          "calculate": "datum.co2_emissions/100000",
          "as": "CO2 Emissions (in 100,000s)"
      }
  ],   
  "encoding": {
      "x": {
          "field": "Population(2022)", 
          "type": "quantitative", 
          "scale": {"type": "log", "domain": [10000, 10000000000]},
          "axis": {"tickCount": 5, "title": "Population (2022)"}
      },
      "y": {
          "field": "CO2 Emissions (in 100,000s)", 
          "type": "quantitative", 
          "scale": {"type": "log", "domain": [1, 10000000]},
          "axis": {"tickCount": 6, "title": "CO2 Emissions (in 100,000s) Tons"}
      }
  },
  "layer": [
      {
          "mark": {"type": "circle", "tooltip": true},
          "encoding": {
              "color": {
                  "field": "Continent",
                  "type": "nominal",
                  "scale": {
                  "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                  ],
                  "range": [
                  "#e41a1c",
                  "#984ea3",
                  "#ff7f00",
                  "#a6cee3",
                  "#377eb8",
                  "#a65628"
                  ]
                  }
              },
              "opacity": {"value": 0.6},
              "size": {
                  "field": "Area",
                  "type": "quantitative",
                  "scale": {
                      "type": "threshold",
                      "domain": [1000, 100000, 500000, 1000000, 5000000],
                      "range": [10, 50, 150, 200, 300, 400]
                      },
                      "legend": {"format": ".1s"}                        
              },
              "tooltip": [
                  {"field": "Country", "type": "nominal"},
                  {"field": "Continent", "type": "nominal"},
                  {"field": "Year", "type": "ordinal"},
                  {"field": "Area", "type": "quantitative", "format": ".2f"},
                  {"field": "Population(2022)", "type": "quantitative", "format": ".2f", "title": "Population (2022)"},
                  {"field": "CO2 Emissions (in 100,000s)", "type": "quantitative", "format": ".2f", "title": "CO2 Emissions in 100,000s"}  
              ]
          }
      },
      {
          "mark": {
              "type": "text",
              "align": "right",
              "baseline": "middle",
              "dx": -12,
              "fontSize": 11.5,
              "fontStyle": "italic"
          },
          "encoding": {
              "text": {"field": "Country", "type": "nominal"},
              "color": {"value": "black"},
              "opacity": {
                  "condition": {
                      "test": "datum['Country'] == 'China' || datum['Country'] == 'Brazil' || datum['Country'] == 'Australia' || datum['Country'] == 'Malaysia' || datum['Country'] == 'Croatia' || datum['Country'] == 'Greenland' || datum['Country'] == 'Maldives' || datum['Country'] == 'Nigeria'",
                      "value": 1
                  },
                  "value": 0
                  },
              "tooltip": [
                  {"field": "Country", "type": "nominal"},
                  {"field": "Continent", "type": "nominal"},
                  {"field": "Year", "type": "ordinal"},
                  {"field": "Area", "type": "quantitative", "format": ".2f"},
                  {"field": "Population(2022)", "type": "quantitative", "format": ".2f", "title": "Population (2022)"},
                  {"field": "CO2 Emissions (in 100,000s)", "type": "quantitative", "format": ".2f", "title": "CO2 Emissions in 100,000s"}  
              ]    
          }
      }
  ]
}
