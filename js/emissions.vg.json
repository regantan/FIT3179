{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CO2 emissions per capita (2012)",
  "width": 800,
  "height": 8400,
  "projection": {"type": "equalEarth"},

  "data": {
    "url": "/ne_110m.json/",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  "layer": [  
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "noData"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "noData"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.postal",
          "from": {
            "data": {
              "url": "/../data/country_emissions.csv"
            },
            "key": "code",
            "fields": ["country, CO2, Population"]
          }
        },
        {
          "calculate": "datum.CO2 / datum.Population",
          "as": "CO2_per_capita"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "CO2_per_capita",
          "type": "quantitative",
          "scale": {"type": "log"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "CO2_per_capita", "type": "quantitative", "title": "CO2 per capita"}
        ]
      }
    }
  ]
}