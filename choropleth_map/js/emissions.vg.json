{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2020,
        "step": 1,
        "name": "Year:   "
      }
    },
    {
      "name": "zoom_level",
      "value": 200,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 650,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [30,0],
      "bind": {
        "input": "select",
        "options": [
          [30,0],
          [90,20],
          [135,-25],
          [35,55],
          [-95,45],
          [-60,-20],
          [0,0]
        ],
        "labels": ["Africa", "Asia", "Australia", "Europe", "North America", "South America","World"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/regantan/FIT3179/main/choropleth_map/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.SOVEREIGNT", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/regantan/FIT3179/main/choropleth_map/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.SOVEREIGNT",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/regantan/FIT3179/main/choropleth_map/data/country_emissions.csv"
            },
            "key": "Country",
            "fields": ["emission_capita"]
          }
        },
        {
          "calculate": "datum.emission_capita",
          "as": "emission_capita"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "emission_capita",
          "title": "CO2 Emission per Capita (Tons)",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "scheme": "reds"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "emission_capita", "type": "quantitative", "title": "Emission per Capita"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/regantan/FIT3179/main/choropleth_map/js/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ]
}